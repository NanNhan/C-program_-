浮点型在内存中的存储
int main()
{
	int n = 9;
	float *pFloat =  (float*)&n;
	printf("n的值为:%d\n",n);//9
	printf("*pFloat的值为:%f\n",*pFloat);//0.000000
	9
	0 00000000 00000000000000000001001
	(-1)^0*0.00000000000000000001001*2^-126 = 0.000000
	*pFloat = 9.0;
	printf("num的值为:%d\n",n);
	9.0
	1001.0
	(-1)^0*1.001*2^3
	0 10000010 0010 0000 0000 0000 0000 000
	0 10000010 0010 0000 0000 0000 0000 000
	1000001000100000000000000000000
	printf("*pFloat的值为:%f\n",*pFloat);//9.000000
	return 0;
}

int main()
{
	float f = 5.5;
	//5.5
	//101.1
	//(-1)^0*1.011.2^2
	//S = 0
	//M = 1.011
	//E = 2
	//129
	//0100 0000 1011  0000 0000 0000 0000 0000
	// 4    0     B     0    0    0    0    0
	//0 10000001 011000000000000000000000
	//    (-1)^0*1.011*2^2
	float b = 3.14;
	return 0;
}
